<!DOCTYPE html>
<html>
<head>
  <title>Kartr - <%=	yield(:title) || "Välkommen" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag 'gmaps4rails', :media => "all" %>
  <%= javascript_include_tag "application" %>

 <%= csrf_meta_tags %>
</head>
<body>
    <div class="container">

		<nav class="top-bar fixed">
			<ul>
				<li class="name">
					<h1><a href="<%= root_url%>">Kartr.se</a></h1>
				</li>
				<li class="toggle-topbar">
					<a href="#"></a>
				</li>
			</ul>

			<section>
				<ul class="left">
					<li><a href="#">Link</a></li>
					<li><a href="#">Link</a></li>
					<li><a href="#">Link</a></li>
				</ul>
				<% if user_signed_in? %>
					<ul class="right">
						<li class="has-dropdown">
							<a href="#">
								<% #@TODO: Bryta ut detta till en helper %>
								<% if current_user.provider? %>
									<img src="<%= current_user.profile_image %>" alt="" class="profile-image-small" />
								<% else %>
								<%= 	
								gravatar_image_tag(current_user.email,  :alt => current_user.email, 
							            :class => 'profile-image-small', 
							            :gravatar => { :default => 'https://assets.github.com/images/gravatars/gravatar-140.png' }) %>
								<% end %>
							    <%= current_user.name%>
							</a>
							<ul class="dropdown">
								<li><%= link_to raw('<i class="foundicon-settings"></i> Inställningar'), edit_user_registration_path %> </li>
                        		<li><%= link_to raw('<i class="foundicon-location"></i> Mina kartor'), maps_path %></li>
                        		<li><%= link_to raw('<i class="foundicon-lock"></i> Logga ut'), destroy_user_session_path, :method => :delete %></li>
							</ul>
						</li>
					</ul>
				<% end %>
			</section>
		</nav>
		<div class="row" id="flash">
			<div class="twelve columns">
				
				<% flash.each do |name, msg| %>
					<div class="alert-box">
					<%= content_tag :div, msg, :id => "flash_#{name}" %>
					</div>
					<% end %>
				
			</div>
		</div>

		<section class="row" id="content">
			<div class="twelve columns">
				<%= yield %>
			</div>
		</section>

		<footer class="row" id="footer">
            <p class="five columns copyright"><strong>kartr.se &copy; 2013</strong></p>
            <div class="seven columns footer_links">
              <%= render "shared/footer_links" %>
			</div>
		</footer>
	</div>

<%= yield :scripts %>

</body>
</html>
