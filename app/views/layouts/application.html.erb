<!DOCTYPE html>
<html>
<head>
  <title>Kartr - <%=	yield(:title) || "Välkommen" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>

 <%= csrf_meta_tags %>
</head>
<body>


	<div class="container">

		<nav class="top-bar fixed">
			<ul>
				<li class="name">
					<h1><a href="#">Kartr.se</a></h1>
				</li>
				<li class="toggle-topbar">
					<a href="#"></a>
				</li>
			</ul>

			<section>
				<ul class="left">
					<li><a href="#">Link</a></li>
					<li><a href="#">Link</a></li>
					<li><a href="#">Link</a></li>
				</ul>
				<% if user_signed_in? %>
					<ul class="right">
						<li class="has-dropdown">

							<a href="#">
								<%= gravatar_image_tag(current_user.email,  :alt => current_user.email, 
							            :class => 'gravatar-small', 
							            :gravatar => { :default => 'https://assets.github.com/images/gravatars/gravatar-140.png' }) %>
							    <%= current_user.username%>
							</a>
							<ul class="dropdown">
								<li><%= link_to raw('<i class="foundicon-settings"></i> Inställningar'), edit_user_registration_path %> </li>
								<li><%= link_to raw('<i class="foundicon-lock"></i> Logga ut'), destroy_user_session_path, :method => :delete %></li>
                        		<li><%= link_to "Kartor", maps_path %></li>
							</ul>

						</li>
					</ul>
				<% end %>
			</section>
		</nav>


		<nav class="row" id="navigation">
			<div class="twelve columns">
				<% if user_signed_in? %>
					inloggad
			  	<% else %>
			  		<%= link_to "Registrera dig", new_user_registration_path %> eller
			  		<%= link_to "Logga in", new_user_session_path %>
					<%#= link_to "Logga in med Facebook", user_omniauth_authorize_path(:facebook) %>
					<%= link_to "Logga in med Twitter", signin_twitter_path %>
			  	<% end %>
			</div>
		</nav>

		<div class="row" id="flash">
			<div class="twelve columns">
				<% flash.each do |name, msg| %>
					<%= content_tag :div, msg, :id => "flash_#{name}" %>
				<% end %>
			</div>
		</div>

		<section class="row" id="content">
			<div class="twelve columns">
				<%= yield %>
			</div>
		</section>

		<footer class="row" id="footer">
			<div class="twelve columns">
				<p class="copywright text_center">&copy; kartr.se</p>
			</div>
		</footer>
	</div>





</body>
</html>
