<nav class="top-bar ">
  <ul>
    <li class="name"><h1><%= link_to "Kartr.se", root_url %></h1></li>
    <li class="toggle-topbar"><a href="#"></a></li>
  </ul>
  <% if user_signed_in?%>
      <section>
        <%= render "shared/dropdowns/maps" %>
        <ul class="left">
          <li class="divider"></li>
          <li class="search">
            <%= form_tag searches_search_path, method: :post do %>
                <div>
                  <%= text_field_tag :query, params[:query], placeholder: "SÃ¶k efter personer eller kartor..." %>
                </div>
            <% end %>
          </li>
        </ul>
        <% if @map.present? and @map.id.present? and current_user == @map.user %>
            <%= render "shared/dropdowns/map_settings", map: @map %>
        <% end %>
        <%= render "shared/dropdowns/main_menu" %>
        <ul class="right">
          <li class="divider"></li>
          <li>
            <a href="<%= profile_path(current_user.slug) %>">
              <% if current_user.provider? %>
                  <img src="<%= current_user.profile_image %>" alt="" class="profile-image-small" />
              <% else %>
                  <%= gravatar_image_tag(current_user.email,
                                         alt: current_user.email,
                                         class: "profile-image-small",
                                         gravatar: { default: 'https://assets.github.com/images/gravatars/gravatar-140.png' }) %>
              <% end %>
              <%= current_user.username %>
            </a>
          </li>
        </ul>
      </section>
  <% end %>
</nav>