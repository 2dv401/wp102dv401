  <p>
    <b>Description:</b>
    <%= mark.description %>
  </p>
<% end %>

<% if (mark.map.user.id == @current_user.id) %>

<p>
  <%= link_to "Ändra markering", edit_map_mark_path(mark.map,mark) %>
</p>

<p>
   <%= link_to 'Ta bort', map_mark_path(mark.map,mark), confirm: 'Vill du ta bort markeringen?', id: "delete-marker-link", method: :delete, remote: true %>
</p>

<% end %>