<fieldset class="loggin-fieldset">
  <legend>Logga in</legend>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="login">
        <%# f.label :login, "Epost eller användarnamn" %>
        <%= f.text_field :login, placeholder: "Epost eller användarnamn" %>
      </div>

      <div class="password">
        <%# f.label :password, "Lösenord" %>
        <%= f.password_field :password, placeholder: "Lösenord" %>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me, class: "remember-me" %> <%= f.label :remember_me, "Kom ihåg mig", class: "remember-me" %></div>
      <% end -%>

      <div><%= f.submit "Logga in", class: "right button loggin" %></div>
  <% end %>
</fieldset>
<fieldset class="loggin-fieldset">
  <legend> Använd eget konto </legend>
  <div class="account-login">
    <%= link_to image_tag("login_with_facebook.png", alt: "logga in med facebook"), user_omniauth_authorize_path(:facebook), title: "Logga in med facebook" %>
  </div>
</fieldset>
