<% comments.each do |c| %>
    <li class="status-comment">
      <p class="status-comment-body">
        <span class="author"><%= c.user.username %></span><%= c.content %>
      </p>
      <div class="status-comment-footer">
        <span class="created-at"><%= time_ago(c.created_at) %></span>
        <% if current_user.likes?(c) %>
            <%= link_to '| Sluta gilla ', map_status_update_status_comment_toggle_like_path(map, update, c), :method => :post %>
        <% else %>
            <%= link_to '| Gilla ', map_status_update_status_comment_toggle_like_path(map, update, c), :method => :post %>
        <% end %>
        <% if current_user == c.user || current_user == map.user %>
            <%= link_to '| Ta bort ', map_status_update_status_comment_path(map, update, c), :confirm => 'Vill du ta bort kommentaren?', :method => :delete %>
        <% end %>
      </div>
    </li>
<% end %>