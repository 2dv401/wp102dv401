<%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>

<div class="row">
  <div class="seven columns">
    <h1><%= @map.name %></h1>
    <p><%= @map.description %><p>
  </div>
  <div class="five columns">
    <% unless @map.user == current_user %>
        <div class ="right" id="follow-button">
          <%= render 'maps/shared/follow_button', :map => @map %>
        </div>
    <% else %>
        <div class="right map-handler">
          <div class="status-update-form">
            <%= render "status_updates/shared/form" %>
          </div>
          <%= link_to "LÃ¤gg till markering", new_map_mark_path(@map) %> |
          <%= link_to "Ã„ndra karta", edit_profile_map_path(@map.user.slug, @map.slug) %> |
          <%= link_to "Ta bort karta", map_path(@map.id), :method=>:delete, :confirm=>"Vill du ta bort kartan?" %>
          <% top_bar_edit_map_link @map %>
          <% top_bar_delete_map_link @map%>
        </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="twelve columns" id="viewMapContainter">
    <%= gmaps(@display_map) %>
  </div>
</div>

<div class="row">
  <% if @map.status_updates.any? %>
      <div class="six columns">
        <h3>Statusuppdateringar</h3>
        <%= render "status_updates/shared/status_updates", :map => @map, :updates => @map.status_updates %>
      </div>
  <% end %>
  <div class="six columns">
    <section class="map-comment-wrapper">
      <h3>Kommentarer</h3>
      <ul class="map-comments">
        <% if @map.map_comments.any? %>
            <%= render "map_comments/shared/map_comments", :map => @map, :comments => @map.map_comments %>
        <% end %>
        <li>
          <div class="map-comment-form">
            <%= render "map_comments/shared/form" %>
          </div>
        </li>
      </ul>
    </section>
  </div>
</div>
