<%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
<h4><%= @map.name %></h4>
(<%= link_to "ta bort", map_path(@map.id), :method=>:delete, :confirm=>"Vill du ta bort kartan?" %>)
<div id="follow-button">
  <%= render 'maps/shared/follow_button', :map => @map %>
</div>

<p><%= @map.description %><p>
<div id="viewMapContainter">
  <%= gmaps4rails(@display_map) %>
</div>

<% if current_user == @map.user %>
    <div class="status-update-form">
      <h3>Skriv statusuppdatering här</h3>
      <%= render "status_updates/shared/form" %>
    </div>
<% end %>

<% if @map.status_updates.any? %>
    <%= render "status_updates/shared/status_updates", :updates => @map.status_updates %>
<% end %>

<div class="map-comment-form">
  <h3>Skriv en kommentar om kartan här</h3>
  <%= render "map_comments/shared/form" %>
</div>


<% if @map.map_comments.any? %>
    <%= render "map_comments/shared/map_comments", :comments => @map.map_comments %>
<% end %>
