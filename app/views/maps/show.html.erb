<%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
<h1><%= @map.name %></h1>

<% unless @map.user == current_user %>
    <div id="follow-button">
      <%= render 'maps/shared/follow_button', :map => @map %>
    </div>
<% end %>
<% if current_user == @map.user %>
    <div class="status-update-form">
      <%= render "status_updates/shared/form" %>
    </div>
<% end %>

<p><%= @map.description %><p>
<div id="viewMapContainter">
  <%= gmaps4rails(@display_map) %>
</div>

<% if @map.status_updates.any? %>
    <h3>Statusuppdateringar</h3>
    <%= render "status_updates/shared/status_updates", :map => @map, :updates => @map.status_updates %>
<% end %>

