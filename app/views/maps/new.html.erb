<% title "Skapa ny karta" %>

<!-- Header -->
<div class="row">
  <div class="twelve columns header-map">
    <h2 class="header-name">Ny karta</h2>
  </div>
</div>
<div class="row map-main">
  <div class="nine columns">
    <!-- Map -->
    <div class="row">
      <div class="twelve columns">
        <div class="right" id="map-options"></div>
         <div class="map-wrapper">
           <%= gmaps(@display_map) %>
         </div>
      </div>
    </div>
    <div class="row">
      <div class="six columns">
        <%= text_field_tag "locationTextField", nil, placeholder: "SÃ¶k startposition" %>
      </div>
      <div class="six columns">
        <%= submit_tag "Hitta min position", type: "button", class: "right small button", id: "geolocate_button" %>
      </div>
    </div>
  </div>
  <div class="right three columns side-map">
    <div class="row">
      <div class="twelve columns">
        <% if first_map? %>
            <%= render 'maps/shared/map_tutorial' %>
        <% end %>
        <div id="mapCreation">
          <%= form_for([current_user, @map], url: profile_maps_path, html: { id: "map-form" }) do |f| %>
              <%= render 'maps/shared/form', f: f %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>